# Required
GOOGLE_CLIENT_ID=          # Google Cloud Console → Credentials → OAuth client
GOOGLE_CLIENT_SECRET=      # Same place as Client ID
# Refresh tokens (one per Gmail account; use Setup Gmail with ?account=N)
GOOGLE_REFRESH_TOKEN=      # Account 1
GOOGLE_REFRESH_TOKEN_2=    # Account 2 (optional)
GOOGLE_REFRESH_TOKEN_3=    # Account 3 (optional)
GOOGLE_REFRESH_TOKEN_4=    # Account 4 (optional)
GOOGLE_REFRESH_TOKEN_5=    # Account 5 (optional)
APP_URL=                   # e.g. http://localhost:3000 or https://yourdomain.com (for OAuth redirect)
OPENAI_API_KEY=            # platform.openai.com → Profile → API keys → Create new
TELEGRAM_BOT_TOKEN=        # Message @BotFather on Telegram to create a bot
TELEGRAM_CHAT_ID=          # Message @userinfobot on Telegram for your chat ID
CRON_SECRET=               # Min 16 chars; random string for cron route auth

# Optional
MAX_EMAILS_PER_RUN=5
LABEL_FILTER=              # e.g. IMPORTANT - only process emails with this label
TEST_PASSWORD=             # For /telegram-test and /check-mail; omit to disable
